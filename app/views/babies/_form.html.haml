= form_for @baby do |f|
  - if @baby.errors.any?
    #error_explanation
      %h2= "#{pluralize(@baby.errors.count, "error")} prohibited this baby from being saved:"
      %ul
        - @baby.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :age
    = f.number_field :age
  .actions
    = f.submit 'Save'
